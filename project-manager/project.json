{
  "name": "project-manager",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "project-manager",
  "projectType": "application",
  "targets": {
    "e2e": {
      "executor": "@nrwl/cypress:cypress",
      "options": {
        "cypressConfig": "apps/project-manager-e2e/cypress.config.ts",
        "devServerTarget": "project-manager:serve:development",
        "testingType": "e2e",
        "browser": "chrome",
        "record": false
        
      },
      "configurations": {
        "production": {
          "devServerTarget": "project-manager:serve:production",
          "record": false
        }
      }
    },
    
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "project-manager/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "project-manager/**/*.{ts,tsx,js,jsx}"
        ]
      }
    }
  },
  "tags": []
}
